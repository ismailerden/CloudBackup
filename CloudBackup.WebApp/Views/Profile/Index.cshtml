@model CloudBackup.Database.ViewModel.ProfileViewModel
@{

}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
           Kullanıcı Profili
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Anasayfa</a></li>
            <li><a href="#">Kullanıcı Profili</a></li>
            
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="~/img/340x340.png" alt="User profile picture">
                        <h3 class="profile-username text-center">@Model.CompanyName</h3>
                        <p class="text-muted text-center">@Model.CompanyPersonName</p>
                       
                      
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- About Me Box -->
             
                <!-- /.box -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">

                        <li class="active"><a href="#settings" data-toggle="tab">Hesap Bilgileri</a></li>
                        <li ><a href="#resetPassword" data-toggle="tab">Şifre Sıfırla</a></li>
                    </ul>
                    <div class="tab-content">

                        <div class="active tab-pane" id="settings">
                            <form asp-controller="Profile" asp-action="ChangeProfileInformation" method="post" class="form-horizontal">
                                <input type="hidden" asp-for="HashedUserId" />
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Kullanıcı Adı</label>
                                    <div class="col-sm-10">
                                        <input type="text" disabled class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail" class="col-sm-2 control-label">Kullanıcı Ad</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="FirstName" placeholder="Kullanıcı Ad">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Kullanıcı Soyad</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="LastName" placeholder="Kullanıcı Soyad">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Kullanıcı Email</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="UserEmailAddress" placeholder="Kullanıcı Email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Şirket İsmi</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="CompanyName" placeholder="Şirket İsmi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Şirket Görevlisi</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="CompanyPersonName" placeholder="Şirket Görevlisi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Şirket Email Adresi</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="CompanyPersonEmail" placeholder="Şirket Email Adresi">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane" id="resetPassword">
                            <form asp-controller="Profile" asp-action="ResetPassword" method="post" class="form-horizontal">
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Eski Şifre</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="txtOldPassword" name="txtOldPassword" placeholder="Eski Şifre">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Yeni Şifre</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="txtNewPassword" name="txtNewPassword" placeholder="Yeni Şifre">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputName" class="col-sm-2 control-label">Yeni Şifre Tekrar</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="txtNewPasswordRety" name="txtNewPasswordRety" placeholder="Yeni Şifre Tekrar">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-success">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                  
                    <!-- /.tab-content -->
                </div>
               
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
